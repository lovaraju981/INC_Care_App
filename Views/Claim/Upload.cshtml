@{
    ViewData["Title"] = "Upload Claims";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background-image: url('/images/heit.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
    }

    .center-wrapper {
        position: relative; /* Needed for absolute positioning of the logo */
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 1rem;
        background-color: rgba(255, 255, 255, 0.85); /* semi-transparent white for readability */
    }

    .background-logo {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0.1;
        max-width: 300px;
        z-index: 0;
    }

    .card {
        position: relative;
        z-index: 1; /* Keep the card above the logo */
    }
</style>

<div class="center-wrapper">
    <!-- 🔽 Background Logo Below the Card -->
    <img src="/images/logo.png" alt="Logo" class="background-logo" />

    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0"><i class="bi bi-file-earmark-pdf-fill"></i> Upload PDF Claims</h4>
        </div>
        <div class="card-body">
            <form asp-action="Upload" asp-controller="Claim" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="form-label fw-semibold">Select Folder</label>
                    <input class="form-control form-control-lg" type="file" name="files" accept=".pdf" webkitdirectory multiple required />
                    <small class="text-muted">Only .PDF files in selected folder will be uploaded</small>
                </div>

                <button type="submit" class="btn btn-success w-100 btn-lg">
                    <i class="bi bi-cloud-upload-fill"></i> Upload & Process
                </button>

                <div id="spinner" class="text-center mt-4 d-none">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2">Processing uploaded files...</p>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const form = document.querySelector("form");
    const fileInput = document.querySelector("input[type='file']");

    form.addEventListener("submit", function (e) {
        const files = fileInput.files;
        if (!files.length) {
            alert("Please select a folder with PDF files.");
            e.preventDefault();
            return;
        }

        for (let i = 0; i < files.length; i++) {
            if (!files[i].name.toLowerCase().endsWith(".pdf")) {
                alert("Only PDF files are allowed.");
                e.preventDefault();
                return;
            }
        }

        document.getElementById("spinner")?.classList.remove("d-none");
    });
</script>

